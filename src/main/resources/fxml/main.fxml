<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.teamweather.controller.MainController"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #87CEEB, #E0F7FF);"
      padding="20">

    <!-- Заголовок приложения -->
    <HBox alignment="CENTER" spacing="10">
        <Label text="☀️ Weather App"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
        <ProgressIndicator fx:id="loadingIndicator" visible="false" prefWidth="30" prefHeight="30"/>
    </HBox>

    <!-- Панель поиска -->
    <VBox spacing="10">
        <Label text="Поиск города:"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495E;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField"
                       promptText="Введите название города..."
                       style="-fx-font-size: 14px; -fx-pref-width: 400px; -fx-pref-height: 40px;"/>
            <Button text="Поиск"
                    onAction="#handleSearch"
                    style="-fx-font-size: 14px; -fx-pref-height: 40px; -fx-pref-width: 80px;"/>
        </HBox>

        <!-- Список предложений -->
        <ListView fx:id="suggestionsListView"
                  prefHeight="150"
                  style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 5;"/>
    </VBox>

    <!-- Основная информация о погоде -->
    <BorderPane style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 20;">
        <top>
            <Label fx:id="cityNameLabel"
                   text="Выберите город"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
        </top>

        <center>
            <HBox spacing="40" alignment="CENTER">
                <!-- Температура и иконка -->
                <VBox spacing="10" alignment="CENTER">
                    <Label fx:id="temperatureLabel"
                           text="--°C"
                           style="-fx-font-size: 64px; -fx-font-weight: bold; -fx-text-fill: #E74C3C;"/>

                    <ImageView fx:id="weatherIcon"
                               fitWidth="120" fitHeight="120"
                               preserveRatio="true"/>

                    <Label fx:id="descriptionLabel"
                           text=""
                           style="-fx-font-size: 18px; -fx-text-fill: #7F8C8D;"/>
                </VBox>

                <!-- Детали погоды -->
                <VBox spacing="15">
                    <Label fx:id="feelsLikeLabel"
                           text="Ощущается: --°C"
                           style="-fx-font-size: 16px; -fx-text-fill: #34495E;"/>

                    <Label fx:id="humidityLabel"
                           text="Влажность: --%"
                           style="-fx-font-size: 16px; -fx-text-fill: #34495E;"/>

                    <Label fx:id="pressureLabel"
                           text="Давление: -- гПа"
                           style="-fx-font-size: 16px; -fx-text-fill: #34495E;"/>

                    <Label fx:id="windLabel"
                           text="Ветер: -- м/с"
                           style="-fx-font-size: 16px; -fx-text-fill: #34495E;"/>
                </VBox>
            </HBox>
        </center>
    </BorderPane>

    <!-- Прогноз на 4 дня -->
    <VBox spacing="10">
        <Label text="Прогноз на 4 дня:"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

        <VBox fx:id="forecastContainer"
              spacing="10"
              style="-fx-background-color: rgba(255, 255, 255, 0.9); -fx-background-radius: 15; -fx-padding: 20;">
            <!-- Прогноз будет добавляться динамически -->
            <Label text="Прогноз появится после выбора города"
                   style="-fx-font-size: 14px; -fx-text-fill: #7F8C8D; -fx-font-style: italic;"/>
        </VBox>
    </VBox>

    <!-- Информация о разработчиках -->
    <HBox alignment="CENTER" spacing="20">
        <Label text="Разработчики: Даниил Улискин (@tr1zet), Антон Чистюхин (@cherep121)"
               style="-fx-font-size: 12px; -fx-text-fill: #7F8C8D;"/>
    </HBox>

</VBox>